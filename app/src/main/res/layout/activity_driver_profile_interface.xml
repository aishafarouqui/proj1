<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trip"
    tools:context=".driver_profile_interface">

    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="أحمد محمد"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/driver_name"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/editor"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:hint="احمد محمد"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHighlight="#4d1290"
            android:textColorHint="#939393"
            android:textColorLink="#000000"
            android:textCursorDrawable="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="196dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="62dp"
            android:fontFamily="sans-serif-black"
            android:text="الإسم"
            android:textColor="#737373"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/driver_email"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/editor"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:hint="AhMh123@hotmail.com"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHighlight="#000000"
            android:textColorHint="#939393"
            android:textColorLink="#000000"
            android:textCursorDrawable="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="276dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="62dp"
            android:fontFamily="sans-serif-black"
            android:text="البريد الإلكتروني"
            android:textColor="#737373"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/driver_phoneNum"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/editor"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:hint="966000000000"
            android:inputType="textPersonName|phone"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#939393"
            android:textColorLink="#000000"
            android:textCursorDrawable="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="356dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="62dp"
            android:fontFamily="sans-serif-black"
            android:text="رقم الجوال"
            android:textColor="#737373"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/driver_password"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_input"
            android:drawableLeft="@drawable/editor"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#939393"
            android:textColorLink="#000000"
            android:textCursorDrawable="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="436dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="62dp"
            android:fontFamily="sans-serif-black"
            android:text="كلمة المرور"
            android:textColor="#737373"
            android:textSize="14sp"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/region"
            android:layout_width="314dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="530dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/custom_input"
            android:entries="@array/regions"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:inputType="text"
            android:text=""
            android:textAlignment="gravity"
            android:textSize="16sp"
            android:visibility="visible"
            app:backgroundTint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="516dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="62dp"
            android:fontFamily="sans-serif-black"
            android:text="اختيار المسار"
            android:textColor="#737373"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="29dp"
            android:layout_height="24dp"
            android:layout_alignTop="@id/region"
            android:layout_alignBottom="@+id/region"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/arrow_down" />


        <Button
            android:id="@+id/logoutbuttun2"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="70dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="-10dp"
            android:paddingRight="20dp"
            android:paddingBottom="6dp"
            android:text="تعديل"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:backgroundTint="#4d1290"
            app:cornerRadius="5dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/NavBar"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:background="#4d1290"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/settings" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/line" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="65dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/line" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>